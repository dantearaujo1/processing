void setup(){
  size(640,640);
  background(150,150,150);
}

void draw(){
  noStroke();
  fill(255,255,255);
  triangle(0,0,640/4,640/4,0,640/2);
  triangle(320,0,640/4,640/4,320,640/2);
  fill(0,0,0);

  triangle(320,0,640/4*3,640/4,320,640/2);

  triangle(640/4*3,0,640,0,640,640/4);

  triangle(640,640/4,640/4*3,640/2,640,640/2);

  rect(0,320,320,320);

  fill(255,255,255);
  circle(320,640,640);
  fill(0,0,0);
  circle(320,640,320);
}
